<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/image_bg_black"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:src="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_logo_home"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:src="@drawable/logoputih"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_user"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_baseline_account_circle_24"
        app:layout_constraintEnd_toEndOf="@+id/image_bg_black"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_bg_red"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:src="@color/red"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/poppins"
        android:text="Maintenance"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/image_bg_red"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/image_hydrant"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="260dp"
        android:src="@drawable/hydrant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_ac"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="260dp"
        android:src="@drawable/ac"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="360dp"
        android:fontFamily="@font/noto_sans"
        android:text="Hydrant"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="516dp"
        android:fontFamily="@font/noto_sans"
        android:text="APAR"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_penangkalpetir"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_marginStart="252dp"
        android:layout_marginTop="260dp"
        android:src="@drawable/penangkal_petir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/penangkalpetir"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="276dp"
        android:layout_marginTop="360dp"
        android:fontFamily="@font/noto_sans"
        android:text="Penangkal \n Petir"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_panellistrik"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="428dp"
        android:src="@drawable/panel_listrik"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="516dp"
        android:fontFamily="@font/noto_sans"
        android:text="Panel Listrik"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_firealarm"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_marginStart="252dp"
        android:layout_marginTop="428dp"
        android:src="@drawable/fire_alarm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginStart="264dp"
        android:layout_marginTop="516dp"
        android:fontFamily="@font/noto_sans"
        android:text="Fire Alarm"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_apar"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="428dp"
        android:src="@drawable/apar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="184dp"
        android:layout_marginTop="360dp"
        android:fontFamily="@font/noto_sans"
        android:text="AC"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/scan_teknisi"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:visibility="gone"
        android:backgroundTint="@color/red"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        android:text="Scan"
        android:textColor="@color/white"
        android:background="@drawable/rounded_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/tombolreport"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/red"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="Report"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/scan_supervisor"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/red"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="Scan"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>