<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backhomeac"
                android:layout_width="42dp"
                android:layout_height="50dp"
                android:background="@color/red"
                android:src="@drawable/ic_baseline_arrow_back_24" />

            <TextView
                android:id="@+id/judulac"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="AC"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@color/red"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tanggalsekarangac"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="italic"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ruangac"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="Ruang"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/detailruangac"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:spinnerMode="dropdown"
                    android:backgroundTint="@color/red"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tekananac"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:gravity="left"
                    android:text="Tekanan "
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/detailtekanan"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/suhuac"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:gravity="left"
                    android:text="Suhu "
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/detailsuhu"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ampereac"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:gravity="left"
                    android:text="Ampere "
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/detailampere"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/kondisiac"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="Kondisi AC"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/detailkondisiac"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:spinnerMode="dropdown"
                    android:entries="@array/normaltidak"
                    android:backgroundTint="@color/red"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/catatanac"
                    android:layout_width="190dp"
                    android:layout_height="30dp"
                    android:text="Catatan Perbaikan : "
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="20sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/textboxac"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Input detail perbaikan"
                    android:gravity="center"
                    android:inputType="textMultiLine"
                    android:textColor="@color/black"
                    android:lines="5"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/submitac"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_corner"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="140dp"
                    android:backgroundTint="@color/red"
                    android:text="Submit"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="80dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/riwayatac"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:text="Riwayat Maintenance"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>

