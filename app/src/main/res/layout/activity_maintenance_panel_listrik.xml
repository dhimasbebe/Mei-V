<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/backhomepanellistrik"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/red"
                android:src="@drawable/ic_baseline_arrow_back_24"/>
            <TextView
                android:id="@+id/judulpanellistrik"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Panel Listrik"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@color/red"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tanggalsekarangpanellistrik"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="italic"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ruangpanel"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="Ruang"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/detailruangpanel"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:spinnerMode="dropdown"
                    android:backgroundTint="@color/red"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/amperers"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:gravity="left"
                    android:text="Ampere R-S "
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/detailamperers"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/amperert"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:gravity="left"
                    android:text="Ampere R-T "
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/detailamperert"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/amperest"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:gravity="left"
                    android:text="Ampere S-T "
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/detailamperest"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/voltagers"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:gravity="left"
                    android:text="Voltage R-S "
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/detailvoltagers"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/voltagert"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:gravity="left"
                    android:text="Voltage R-T "
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/detailvoltagert"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/voltagest"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:gravity="left"
                    android:text="Voltage S-T "
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/detailvoltagest"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/kondisibautpanellistrik"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="Kondisi Baut"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/detailkondisibautpanellistrik"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:spinnerMode="dropdown"
                    android:entries="@array/baut"
                    android:backgroundTint="@color/red"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/catatanpanellistrik"
                    android:layout_width="190dp"
                    android:layout_height="30dp"
                    android:text="Catatan Perbaikan : "
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="20sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/textboxpanellistrik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Input detail perbaikan"
                    android:gravity="center"
                    android:inputType="textMultiLine"
                    android:lines="5"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/submitpanel"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="140dp"
                    android:backgroundTint="@color/red"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_corner"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="80dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/riwayatpanellistrik"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_marginBottom="20dp"
                android:text="Riwayat Maintenance"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>

