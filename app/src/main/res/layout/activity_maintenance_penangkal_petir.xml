<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backhomepenangkalpetir"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/red"
                android:src="@drawable/ic_baseline_arrow_back_24" />

            <TextView
                android:id="@+id/judulpenangkalpetir"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@color/red"
                android:gravity="center"
                android:text="Penangkal Petir"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tanggalsekarangpenangkalpetir"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lantaipenangkalpetir"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:gravity="left"
                    android:text="Ruang"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/detailruangpetir"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/red"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/kondisibautpenangkalpetir"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:gravity="left"
                    android:text="Kondisi Baut"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/detailkondisibautpenangkalpetir"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/red"
                    android:entries="@array/baut"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/groundingtest"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:gravity="left"
                    android:text="Grounding Test "
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/detailgroundingtest"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/catatanpenangkalpetir"
                    android:layout_width="190dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Catatan Perbaikan : "
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/textboxpanangkalpetir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="Input detail perbaikan"
                    android:inputType="textMultiLine"
                    android:lines="5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/submitpetir"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="140dp"
                    android:backgroundTint="@color/red"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_corner"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/riwayatpenangkalpetir"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="Riwayat Maintenance"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

