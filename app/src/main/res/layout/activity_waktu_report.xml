    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/backhomeac"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/red"
        android:src="@drawable/ic_baseline_arrow_back_24"/>

        <TextView
            android:id="@+id/juduldownload"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Report Maintenance"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@color/red"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvperiodeawal"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:gravity="left"
                android:text="Dari tanggal : "
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etperiodeawal"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvperiodeakhir"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:gravity="left"
                android:text="Hingga tanggal : "
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etperiodeakhir"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:inputType="number" />
        </LinearLayout>

        <Button
            android:id="@+id/tomboldownload"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginBottom="28dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="150dp"
            android:backgroundTint="@color/red"
            android:gravity="center"
            android:text="Download" />
    </LinearLayout>
</ScrollView>